
<blockquote><h3>Notes</h3></blockquote>
<div class="row">
  <div class="col s12">
    <%= link_to 'back', user_file_path(@user_file), class: 'btn-small right' %>
  </div>
</div>

<div>
  <%= render 'form', note: @note %>
</div>


<%if @user_file.notes.present? %>
    <table class="striped centered">
      <thead>
      <tr>
        <th>Text</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @notes.each do |note| %>
          <tr>
            <td><%= note.text %></td>
            <td><%= note.created_at.strftime('%d %b %Y - %H:%M:%S %P') %></td>
            <td><%= link_to 'Edit', edit_user_file_note_path(@user_file, note), class: 'btn-small' %></td>
            <td><%= link_to 'Destroy', user_file_note_path(@user_file, note), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-small red' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

<%end%>

<br>

